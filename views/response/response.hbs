<div>{{post.name}}</div>
<form action="/response" method="post">
    <input value={{post._id}} name="postId" hidden />
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="response"></label>Response</label>
                <textarea class="form-control" id="response" name="response" cols="20" rows="1"
                    placeholder="Respond to Hand eJob"></textarea>
            </div>
            <div class="form-group">
                <label for="Availabilty">Availability</label>
                <input type="text" class="form-control" id="Availability" name="availability"
                    placeholder="Date and Time First Available...">
            </div>
            <p>Status</p>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Accepted</label>
                <br>
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">In Progress</label>
                <br>
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Complete</label>
            </div>


        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-warning text-white">Send Response</button>

        </div>
    </div>
</form>
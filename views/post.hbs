<h2>Create a new Job</h2>

<form action="/response" method="response">
    <p class="form-group">
        <label for="name">Task:</label>
        <input type="text" name="name" id="name" class="form-control">
    </p>
    <p class="form-group">
        <label for="description">Summary of Task:</label>
        <textarea name="description" id="" cols="30" rows="10" class="form-control"></textarea>
    </p>
    <div class="form-row mb-3">
        <div class="col">
            <label for="status">Status:</label>
            <input type="text" name="status" id="status" class="form-control">
        </div>
        <div class="col">
            <label for="priority">Priority Level:</label>
            <input type="text" name="priority" id="priority" class="form-control">
        </div>
    </div>
    <p class="form-group">
        <input type="submit" value="Submit for Hand-E Jobber" class="btn btn-primary">
    </p>
    <p class="form-group">
        <input type="submit" value="Respond Posting" class="btn btn-primary">
    </p>
</form>
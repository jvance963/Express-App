<section class="form-container">
    <h4>New Hand ejob</h4>

    <form action="/post" method="post" class="job-form">
        <div class="form-group">
            <label for="Job Name">Job Name</label>
            <input type="text" class="form-control" id="Job Name" placeholder="">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="Description" name="description" cols="20" rows="2"></textarea>
        </div>
        <div class="form-group">
            <label for="Status of Job">Job Status</label>
            <input type="text" class="form-control" id="Status of Job" placeholder="Job Status...">
        </div>
        <div class="form-group">
            <label for="Job Priority">Job Priority</label>
            <input type="text" class="form-control" id="Job Priority" placeholder="Job Priority...">
        </div>
        <div class="form-group">
            <label for="Instructions">Special Instructions</label>
            <input type="text" class="form-control" id="Instructions" placeholder="Special Instructions...">
        </div>
        <div>
            <input type="submit" value="Post Hand eJob" class="btn btn success">
        </div>
    </form>
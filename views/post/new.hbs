<section class="form-container">
    <h4>New Hand ejob</h4>

    <form action="/post" method="post" class="job-form">
        <div class="form-group">
            <label for="Job Name">Job Name</label>
            <input type="text" class="form-control" id="Job Name" placeholder="Job Name...">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="Description" name="description" cols="20" rows="2"
                placeholder="Tell Us About Your Job..."></textarea>
        </div>
        <div class="form-group">
            <label for="Status of Job">Job Status</label>
            <label for="exampleFormControlSelect1">Priority Level</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>Incomplete</option>
                <option>Complete</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Job Priority">Job Priority</label>
            <label for="exampleFormControlSelect1">Priority Level</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Instructions">Special Instructions</label>
            <input type="text" class="form-control" id="Instructions" placeholder="Special Instructions...">
        </div>
        <div>
            <a href="/post" class="btn btn-success text-white">Add New Hand eJob</a>
        </div>
    </form>
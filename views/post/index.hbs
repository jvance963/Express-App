<div class="w3-container w3-red w3-center" style="padding:100px 16px">
    <h1 class="w3-margin w3-jumbo" style="padding: auto">Request New Hand eTask</h1>

    {{#each posts}}
    <p>Task: {{name}}</p>
    <p>Description: {{description}}</p>
    <p>Status: {{status}}</p>
    <p>Priority Level: {{priority}}</p>
    {{/each}}

    <form action="post" method="post">
        <p class="form-group">
            <label for="name">Task:</label>
            <input type="text" name="name" id="name" class="form-control">
        </p>
        <p class="form-group">
            <label for="description">Summary of Task:</label>
            <textarea name="description" id="" cols="10" rows="10" class="form-control"></textarea>
        </p>
        <div class="form-row mb-3">
            <div class="col">
                <label for="status">Status:</label>
                <input type="text" name="status" id="status" class="form-control">
            </div>
            <br>
            <div class="col">
                <label for="priority">Priority Level:</label>
                <input type="text" name="priority" id="priority" class="form-control">
            </div>
        </div>
        <p class="form-group">
            <input type="submit" value="Submit Job" class="btn btn-primary">
        </p>
    </form>

</div>
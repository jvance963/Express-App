<h2>Edit Hand eJob</h2>

<form action="/post/{{post.id}}?_method=PUT" method="POST" class="job-form">
    <div class="form-group">
        <label for="name">Job name:</label>
        <textarea class="form-control" id="name" name="name" cols="20" rows="1"
            placeholder="Edit your Hand eJob">{{post.name}}</textarea>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" cols="30" rows="3"
            placeholder="Edit the description of your Hand eJob">{{post.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <div class="form-check">

            <input checked type="checkbox" class="form-check-input" id="status">
            <label class="form-check-label" for="exampleCheck1">Complete</label>
            <br>
            <input type="checkbox" class="form-check-input" id="status">
            <label class="form-check-label" for="exampleCheck1">Incomplete</label>
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Priority Level</label>
        <select class="form-control" id="priority">
            <option></option>
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
        </select>
        <div class="form-group">
            <label for="instructions">Edit Special Instructions</label>
            <textarea class="form-control" id="instructions" name="instructions" cols="20" rows="1"
                placeholder="Special Instructions.....">{{post.instructions}}</textarea>
        </div>
        <p class="form-group">
            <input type="submit" value="Save" class="btn btn-primary">
        </p>
    </div>

</form>